{
    "name": "dev-extensions/thumbnail-generator",
    "description": "Media thumbnails generator plugin",
    "type": "package",
    "require": {
        "php": ">=7.4",
        "laravel/framework": "^7.0",
        "intervention/image": "^2.6"
    },
    "autoload": {
        "psr-4": {
            "Platform\\ThumbnailGenerator\\": "src/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Platform\\ThumbnailGenerator\\Providers\\ThumbnailGeneratorServiceProvider"
            ],
            "aliases": {
                "ThumbnailMedia": "Platform\\ThumbnailGenerator\\Facades\\ThumbnailMediaFacade"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
